<div data-role="page" id="index">  

	<div data-role="header" data-position="inline">
		<h1>SearchSG</h1>
	</div>

	<div data-role="content" data-theme="b">  
		<% if flash[:notice] %>
		<div class = "alert alert-success">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<%= flash[:notice] %>
		</div>
		<% end %>

		<% if flash[:alert] %>
		<div class = "alert alert-error">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<%= flash[:alert] %>
		</div>
		<% end %>

		<%= form_tag("/home/search", method: "get") do %>
		<input type="search" name="search" id="search-basic" value="" placeholder="Search" />
		<input type="submit" value="Search" data-theme="a" data-inline="true" data-icon="search" class ="btn btn-primary"/>
		<% end %>

		<hr />
		<ul data-role="listview" data-inset="true">
			<li data-role="list-divider" data-theme="a">Navigation</li>
			<li><a href=<%= home_category_path %>>Search by Category</a></li>
			<li><a href="#">View Favorites/Bookmarks</a></li>
			<li><a href=<%= contact_path %>>Contact Us</a></li>
		</ul>
	</div>

</div>   
